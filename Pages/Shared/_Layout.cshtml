@using Microsoft.AspNetCore.Identity;
@using N0855975_assessment2.Models;
@inject SignInManager<AppUser> SignInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Home</a>
                <button class="navbar-toggler btn-primary" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Shop</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Visitor"))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Cart">View Basket</a>
                            </li>
                        }
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ManageProduce">Manage Produce</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/AddProducts">Add Product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/AdminDashboard">Admin Dashboard</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">About Us</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer id="footer" class="text-muted box-shadow border-top">
            <h2>Game Store</h2>
            <div class="social">
                <a href="https://en-gb.facebook.com/"><i class="social_logo"><img src="/images/fb_icon.png" alt="fb logo" title="fb logo"></i></a>
                <a href="https://twitter.com"><i class="social_logo"><img src="/images/twitter_icon.png" alt="twitter logo" title="twitter logo"></i></a>
                <a href="https://www.instagram.com"><i class="social_logo"><img src="/images/instagram_icon.png" alt="instagram logo" title="instagram logo"></i></a>
            </div>
            <p>
                Copyright © @DateTime.Now.Year. All Rights Reserved.
            </p>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
